<view>
    <view class="header" style='background-image: url("{{flim.images.large}}")' wx:if="{{flim.images.medium}}">  
    <view class='header-content'>
        <image class="header-content-fm" src='{{flim.images.medium}}' wx:if="{{flim.images.medium}}"></image>  
      <view class='header-content-info'>
        <text class='header-content-title'>{{flim.title}}</text>
        <view class="flim-info-container">
          <text class="flim-rate">{{flim.rating.average}}</text>
          <view class="flim-rate-container">
            <view class='film-star {{flim.rating.star}}'></view>
            <text class='film-ratecount'>{{flim.ratings_count}}人评价</text>
          </view>
        </view>
      </view>
    </view>
    </view>  
  <view class='film-info'>
    <view class='film-reinfo'>{{genres}}</view>
    <view class='film-reinfo'>{{countries}}</view>
    <view class='film-reinfo'>{{casts}}</view>    
    <button class="film-btn" hover-class='film-btn-active'>想看</button>
    <view class='film-summarytitle'>{{flim.title}}的剧情简介</view>
    <view class='film-summarycontent'>{{flim.summary}}</view>
  </view>
</view>