/* pages/detail/detail.wxss */
.header{
  position: relative;
  width:100%;
  height: 400rpx;
  background-repeat: no-repeat;
  background-size: cover;
}
.header::before{
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
}
.header-content{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.header-content-fm{
  display: block;
  width: 200rpx;
  height: 294rpx;
  margin-left: 50rpx;
}
.header-content-info{
  position: absolute;
  left: 280rpx;
  top: 40rpx;
  color: #fff;
}
.header-content-title{
  font-size: 40rpx;
}
.flim-info-container{
  display: flex; 
  flex-direction: row; 
}
.flim-rate{
  font-size: 80rpx;
}
.flim-rate-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.film-ratecount{
  font-size: 25rpx;
  color: #ccc;
}
.film-info{
  padding: 20rpx;
}
.film-reinfo{
  font-size: 28rpx;
  line-height: 1.5;
}
.film-summarytitle{
  color: #ccc;
  font-size: 25rpx
}
.film-btn{
  margin:30rpx;
  background-color: #fff;
  border: 1px solid #FAAE53;
  font-size: 30rpx;
  color: #FAAE53;
}
.film-btn-active{
  background-color: #FAAE53;
  color: #fff;
}
.film-summarycontent{
  margin-top: 20rpx;
  font-size: 30rpx ;
  line-height: 1.5;
}